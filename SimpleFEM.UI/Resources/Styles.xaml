<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="GroupLabelStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
    </Style>

    <Style x:Key="ToolbarButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Margin" Value="2,0"/>
    </Style>

    <Style x:Key="ToolbarDividerStyle" TargetType="Border">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Height" Value="24"/>
        <Setter Property="Background" Value="#E5E5E5"/>
        <Setter Property="Margin" Value="8,0,16,0"/>
    </Style>

</ResourceDictionary>