<Window x:Class="SimpleFEM.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleFEM.UI.Views"
        xmlns:viewModel="clr-namespace:SimpleFEM.UI.ViewModels"
        xmlns:view="clr-namespace:SimpleFEM.UI.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="600" Width="900"
        d:DesignHeight="450" d:DesignWidth="800" d:FontSize="16"
        Title="{Binding WindowTitle}" 
        >
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:LaunchViewModel}">
            <view:LaunchView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CanvasViewModel}">
            <view:CanvasView/>
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding Navigation.CurrentViewModel}"/>

</Window>
